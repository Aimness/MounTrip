<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/colorWHite" />
    <item android:state_selected="true" android:drawable="@color/colorWHite" />
    <item>
        <inset android:insetLeft="-10dp" android:insetRight="-10dp" android:insetTop="-10dp" >
            <shape android:shape="rectangle">
                <stroke android:width="3dp"
                    android:color="@color/colorBlack"/>
                <solid android:color="@color/colorWHite" />
            </shape>
        </inset>
    </item>
</selector>
